<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_news_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_news_image"
                app:layout_aspectRatio="178%"
                app:layout_widthPercent="100%"
                android:scaleType="centerCrop"
                android:src="@drawable/nature"
                />
        </android.support.percent.PercentRelativeLayout>

        <TextView
            android:id="@+id/item_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:text="My Title"
            style="@style/Base.TextAppearance.AppCompat.Title"
            />
        <TextView
            android:id="@+id/item_news_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:maxLines="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:textColor="#808080"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:text="Wed, 3rd August, 2016"/>
        <TextView
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:id="@+id/item_news_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:maxLines="4"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="aaaaaaaadssdksdfjsdfkjsdfkdfslksfjkslfkflsdfkslfsflksdfkljsffffffffffffdfkdlfjdlfjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjfffffffffffffffffffffffff"/>

    </LinearLayout>
</android.support.v7.widget.CardView>


